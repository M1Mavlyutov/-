#include <iostream>
#include <math.h>

using namespace std;

int main() {

	setlocale(LC_ALL, "Russian");

	//Задание 1
	{
		cout << "Задание 1" << endl;

		double a, y;
		const double PI = 3.141592653589793;

		cout << "Чтобы перевести значение а из градусов в радианы" << endl;
		cout << "Введите а=";
		cin >> a;
		
		y = (PI / 180) * a;

		cout << "угол а в радианах=" << y << endl;
	}

	//Задание 2
	{
		cout << endl << "Задание 2" << endl;

		double a, y;
		const double PI = 3.141592653589793;

		cout << "Чтобы перевести значение а радианов в градусы" << endl;
		cout << "Введите а=";
		cin >> a;

		y = a * 180 / PI;

		cout << "угол а в градусах=" << y << endl;
	}

	//Задание 3
	{
		cout << endl << "Задание 3" << endl;

		float X, Y, Yn, A, kg;

		cout << "Введите сколько кг весят конфеты" << endl;
		cout << "X=";
		cin >> X;

		cout << "Введите сколько стоят эти же конфеты" << endl;
		cout << "A=";
		cin >> A;

		if (X <= 0) {
			cout << "Ошибка: Х не должно быть меньше либо ранво нулю";
		}

		else if (A <= 0) {
			cout << "Ошибка: A не должно быть меньше либо ранво нулю";
		}

		else {

			kg = A / X; // 1кг

			cout << "Сколько кг хотите приобрести?" << endl;
			cout << "Y=";
			cin >> Y;

			Yn = kg * Y;

			cout << "Будет стоить=" << Yn << "р" << endl;
			cout << "1кг стоит=" << kg << "р" << endl;
		}
	}

	//Задание 4
	{
		cout << endl << "Задание 4" << endl;

		int V1, V2, S, T, Res;

		cout << "Введите скорость первого автомобиля(км/ч)" << endl << "V1=";
		cin >> V1;
		cout << "Введите скорость второго автомобиля(км/ч)" << endl << "V2=";
		cin >> V2;
		cout << "Введите расстояние между автомобилями(км)" << endl << "S=";
		cin >> S;
		cout << "Введите время(ч)" << endl << "T=";
		cin >> T;

		Res = S + (V1 * T) + (V2 * T);

		cout << "Расстояние между автомобилями=" << Res << "км" << endl;
	}

	//Задание 5
	{
		cout << endl << "Задание 5" << endl;

		float A, B, x;

		cout << "Чтобы решить линейное уравнение A·x + B = 0" << endl;
		cout << "Введите А=";
		cin >> A;
		cout << "Введите В=";
		cin >> B;

		x = -(B) / A;

		cout << "x=" << x << endl;
	}

	//Задание 6
	{
		cout << endl << "Задание 6" << endl;

		float A1, B1, C1, A2, B2, C2, x, y, D;

		cout << "Чтобы найти решение системы линейных уравнений вида A1·x + B1·y = C1" << endl;
		cout << "                                                    A2·x + B2·y = C2" << endl;
		cout << "Введите A1=";
		cin >> A1;
		cout << "Введите B1=";
		cin >> B1;
		cout << "Введите C1=";
		cin >> C1;
		cout << "Введите A2=";
		cin >> A2;
		cout << "Введите B2=";
		cin >> B2;
		cout << "Введите C2=";
		cin >> C2;

		D = A1 * B2 - A2 * B1;
		if (D != 0) {
			x = (C1 * B2 - C2 * B1) / D;
			y = (A1 * C2 - A2 * C1) / D;
			cout << "\n x=" << x << "\n y=" << y << endl;
		}
		else {
			cout << " A1*B2 - A2*B1 = 0" << endl;
		}
	}
	return 0;
}
